                                    <ImageBrush ImageSource="C:\Users\dawon\Downloads\hi (@AIpixiv) _ X.jpg" Stretch="UniformToFill"/>
                                </Rectangle.Fill>
                                <Rectangle.RadiusX>20</Rectangle.RadiusX>
