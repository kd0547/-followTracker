            </ScrollViewer>
        </DockPanel>

        <Border Margin="20 10 20 10">
            <Rectangle Height="1" Fill="#FFCACACA" HorizontalAlignment="Stretch"/>
        </Border>

            
    </StackPanel>
    
</Window>
